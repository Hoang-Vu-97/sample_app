<% provide :title, t("static_pages.users.new.log_in") %>
<h1><%= t "static_pages.users.new.log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <b><%=  t"static_pages.users.new.email" %></b>
      <%= f.email_field :email, class: 'form-control' %>

      <b><%=  t"static_pages.users.new.password" %></b>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit (t"static_pages.users.new.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t"static_pages.users.new.user" %> <%= link_to t("static_pages.users.new.sign_up"), signup_path %></p>
  </div>
</div>
